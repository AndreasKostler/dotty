{
  "name": "dotty",
  "displayName": "[EXPERIMENTAL] Dotty Language Service",
  "description": "IDE integration for the Dotty compiler",
  "version": "0.0.1",
  "publisher": "lampepfl",
  "repository": "https://github.com/smarter/vscode-dotty",
  "engines": {
    "vscode": "^1.9.1"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/src/extension",
  "activationEvents": [
    "onLanguage:scala"
  ],
  "languages": [
    {
      "id": "scala",
      "extensions": [
        ".scala"
      ],
      "aliases": [
        "Scala"
      ]
    }
  ],
  "scripts": {
    "tsc": "./node_modules/.bin/tsc",
    "vscode:prepublish": "npm run update-all && ./node_modules/.bin/tsc -p ./",
    "compile": "./node_modules/.bin/tsc -p ./",
    "update-all": "npm install && node ./node_modules/vscode/bin/install && curl -L -o coursier https://github.com/coursier/coursier/raw/v1.0.0-RC1/coursier",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "dependencies": {
    "vscode-languageclient": "^3.2.0",
    "vscode-languageserver": "^3.2.0"
  },
  "devDependencies": {
    "typescript": "^2.1.6",
    "vscode": "^1.0.3",
    "@types/node": "^7.0.5"
  }
}
